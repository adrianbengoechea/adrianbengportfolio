---
import MainTitle from './aside/MainTitle.astro';
import Navigation from './aside/Navigation.astro';
import Socials from './aside/Socials.astro';
---
<aside>

  <MainTitle />
  <Navigation />
  <Socials />

    

    

  </aside>
  <style>
    aside {
        position: sticky;
        top: 0;
        left: 0;
        width: 48%;
        display: flex;
        flex-direction: column;
        padding: 4rem 2rem 3rem;
        box-sizing: border-box;
        z-index: 1;
        justify-content: space-between;
        height: 100vh;
    }

    @media (max-width: 991px) {
      aside {
        width: 100%;
        position: relative;
        height: auto;
        top: auto;
        left: auto;
        height: auto;
        padding-left: 0;
        padding-bottom: 0rem;
        padding-right: 0;
        margin: 0 auto;
        max-width: 575px;
      }
    }
    
    
  </style>